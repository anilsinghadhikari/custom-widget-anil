<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/generalRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>


    <com.android.watchoveryou.customwidgets.WOYProgressBarWidget
        android:visibility="gone"
        android:id="@+id/progressWidget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></com.android.watchoveryou.customwidgets.WOYProgressBarWidget>

    <com.android.watchoveryou.customwidgets.WOYErrorWidget
        android:id="@+id/erroWidget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></com.android.watchoveryou.customwidgets.WOYErrorWidget>
</LinearLayout>